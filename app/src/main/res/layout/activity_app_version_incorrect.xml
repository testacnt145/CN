<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background_0"
    android:orientation="vertical">
    <include
        layout="@layout/app_name_textview"/>
    <include
        layout="@layout/app_version_textview"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_description"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8.0dip"
        android:src="@mipmap/icon_hd" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:layout_marginTop="10.0dip"
        android:text="@string/app_version_incorrect_title"
        android:textColor="@color/transparent_white"
        android:textStyle="bold"
        android:textSize="16.0sp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="6.0dip"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:text="@string/app_version_incorrect"
        android:textColor="@color/transparent_white"
        android:textStyle="italic"
        android:textSize="14.0sp" />
</LinearLayout>
