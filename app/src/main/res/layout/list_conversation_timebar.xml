<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Bar (date etc) -->
    <LinearLayout
        android:id="@id/conversation_list_timebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@color/transparent_light_gray"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@id/conversation_list_timebar_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/abc_ic_menu_share_mtrl_alpha"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@id/conversation_list_timebar_msg_star"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:contentDescription="@string/content_description"/>
        <TextView
            android:id="@id/conversation_list_timebar_msg_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
        <ImageView
            android:id="@id/conversation_list_timebar_msg_status"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@string/content_description"/>
    </LinearLayout>

    <!--
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/divider_grey"/>
        -->
</merge>