<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@id/conversation_link_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/quote_grey"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/conversation_link_bar_image"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@id/conversation_link_bar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:maxLines="3"/>
                <TextView
                    android:id="@id/conversation_link_bar_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyed_out"
                    android:maxLines="2"/>
                <TextView
                    android:id="@id/conversation_link_bar_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@id/conversation_link_bar_cancel"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@string/content_description"
            android:layout_alignParentRight="true"
            android:background="@color/transparent_light_gray"
            android:src="@drawable/btn_cancel"/>

    </RelativeLayout>
</merge>